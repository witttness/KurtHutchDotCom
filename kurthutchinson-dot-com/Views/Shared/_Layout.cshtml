<!DOCTYPE html>
<html lang="en-us" ng-app="app">
<head>
    <meta charset="utf-8" />
    <base href="/" />
    <title ng-bind="(titl ? title + ' | ' : '') + 'KurtHutchinson.com'">@ViewBag.Title - KurtHutchinson.com</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/bundles/kurt-styles")
    @*@Styles.Render("~/Content/css")*@
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <div class="container-fluid">
        <div ui-view>
            @RenderBody()
        </div>
    </div>
    <div class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Kurt Hutchinson Photography", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a ui-sref="portfolio">Portfolio</a></li>
                    <li><a ui-sref="blog">Blog</a></li>
                    <li><a ui-sref="about">About</a></li>
                    <li><a ui-sref="contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/kurt-scripts")
    @Scripts.Render("~/bundles/kurt-app")
    @RenderSection("Scripts", required: false)
</body>
</html>
